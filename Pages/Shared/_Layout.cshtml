<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href="~/libraries/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/libraries/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
        <title>Планировщик задач</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-primary mb-3">
            <div class="container-md">
                <a class="navbar-brand text-light" asp-page="/Index">Планировщик задач</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="menu">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Index">
                                <i class="bi bi-archive"></i>
                                Список задач
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Task/Create">
                                <i class="bi bi-plus-circle"></i>
                                Добавить задачу
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <main class="container-md">
            @RenderBody()
        </main>
        <script src="~/libraries/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
